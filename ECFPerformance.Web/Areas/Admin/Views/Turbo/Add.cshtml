@using static ECFPerformance.Constants.GeneralApplicationConstants
@model TurboFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="@AdminAreaName" asp-controller="Turbo" asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Make" class="form-label-add-edit">Make</label>
                <input asp-for="@Model.Make" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Make" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label-add-edit">Quantity</label>
                <input asp-for="@Model.Quantity" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.MainImage" class="form-label-add-edit">Image</label>
                <input asp-for="@Model.MainImage" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.MainImage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ScrollTypeId" class="form-label-add-edit">Type of event</label>
                <select asp-for="@Model.ScrollTypeId" class="form-control" aria-required="true">
                    @foreach (var type in Model.ScrollTypes)
                    {
                        <option value="@type.Id">@type.ScrollType</option>
                    }
                </select>
                <span asp-validation-for="@Model.ScrollTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>