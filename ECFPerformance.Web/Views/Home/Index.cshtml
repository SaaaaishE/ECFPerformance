@model IEnumerable<AllProjectCarsViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<video autoplay muted loop id="homepageDrift">
    <source src="~/videos/homepgDrift.mp4" type="video/mp4">
</video>

<div class="text-center">
    <h1 class="display-4">OUR PROJECTS</h1>
</div>

@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-4">
                <div class="card ">
                    <div class="card-body">
                        <img src=@post.MainImage class="col-sm-12" />
                        <a asp-controller="ProjectCar" asp-action="ShowProjectCar" asp-route-id="@post.Id" class="card-title text-center">@post.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
 <br />
<a class="btn btn-primary btn-lg" asp-controller="Category" asp-action="Index">PRODUCTS</a>
