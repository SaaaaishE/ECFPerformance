@model ShoppingCartViewModel

<h1>My Cart</h1>

@if (Model.TurbosInCart != null && Model.TurbosInCart.Count() > 0)
{
    <h3>Turbos: </h3>
    <table>
        <tbody>
            @foreach (TurboInCartViewModel turbo in Model.TurbosInCart)
            {
                <tr>
                    <td>
                        <p style="visibility: hidden" id="turboId">@turbo.Id</p>
                    </td>
                    <td>@turbo.Name</td>
                    <td>$ @turbo.Price</td>
                    <td>
                        <a asp-area="" asp-controller="ShoppingCart" asp-action="RemoveTurboFromCart" asp-route-id="@turbo.Id" class="btn btn-danger">Remove From Cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />

    <a asp-area="" asp-controller="Order" asp-action="PlaceOrder" class="btn btn-success">PLACE ORDER</a>
}
else
{
    <p class="text-warning text-md-start">Your Cart Is Empty</p>
    <a class="btn btn-primary btn-md" asp-area="" asp-controller="Category" asp-action="Index">Products</a>
}

